@model IEnumerable<FireLow.CUSTOMER>
@{

    ViewBag.Title = "CustomerDefinition";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="page-content" style="min-height:1200px">
    <div class="portlet-body form">
        <form class="form-horizontal" action="~/Customer/CustomerSave" method="post">
            <div class="form-body">
                <h3 class="form-section">Müşteri Bilgileri</h3>

                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label class="control-label col-md-3">Firma</label>
                            <div class="col-md-7">
                                <input type="text" id="APPELLATION" name="APPELLATION" class="form-control" placeholder="">
                                @*<span class="help-block"> This field has error. </span>*@
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group has-error">
                            <label class="control-label col-md-3">Yetkili Adı Soyadı *</label>
                            <div class="col-md-7">
                                <input type="text" id="CNAME" name="CNAME" class="form-control" value="@Html.Raw(ViewBag.CNAME)">
                                <input type="hidden" id="REFID" name="REFID" value="0" class="form-control" />
                            </div>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label class="control-label col-md-3">Vergi / T.C Kimlik No</label>
                            <div class="col-md-7">
                                <input type="text" id="CTAXNO" name="CTAXNO" class="form-control" placeholder="" maxlength="10">
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label class="control-label col-md-3">Vergi Dairesi</label>
                            <div class="col-md-7">
                                <input type="text" id="CTAXOFFICE" name="CTAXOFFICE" class="form-control" placeholder="">
                            </div>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group has-error">
                            <label class="control-label col-md-3">Telefon *</label>
                            <div class="col-md-7">
                                <input type="text" id="CGSM" name="CGSM" class="form-control" maxlength="10">
                                @*<span class="help-block"> (999) 999-9999 </span>*@
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label class="control-label col-md-3 ">E-Posta Adresi</label>
                            <div class="col-md-7">
                                <input type="text" id="CMAIL" name="CMAIL" class="form-control" value="@Html.Raw(ViewBag.CMAIL)">
                            </div>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label class="col-md-3 control-label">Durumu</label>
                            <div class="col-md-7">
                                <input type="checkbox" class="make-switch" id="CSTATUS" name="CSTATUS" value="OK" data-on-color="success" data-off-color="danger" data-on-text="Aktif" data-off-text="Pasif" checked>

                            </div>
                        </div>
                    </div>
                </div>

                <h3 class="form-section">Adres Bilgileri</h3>

                <div class="row">
                    <div class="col-md-6 ">
                        <div class="form-group has-error">
                            <label class="control-label col-md-3">Adres *</label>
                            <div class="col-md-7">
                                <input type="text" id="CADRESS" name="CADRESS" class="form-control" placeholder="">
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label class="control-label col-md-3">Açıklama </label>
                            <div class="col-md-7">
                                <input type="text" id="CAREA" name="CAREA" class="form-control" placeholder="">
                            </div>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label class="control-label col-md-3">İl</label>
                            <div class="col-md-7">
                                <select id="il" name="CPROVINCE" class="form-control">
                                    <option value="">- Select -</option>
                                </select>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label class="control-label col-md-3">İlçe</label>
                            <div class="col-md-7">
                                <select id="ilce" name="CDISTRICT" class="bs-select form-control input" disabled="disabled">
                                    <option value=""> -Select -</option>
                                </select>
                            </div>
                        </div>
                    </div>
                </div>

                <div style="padding-top:70px">
                    <div class="form-actions">
                        <div class="row">
                            <div class="col-md-3">
                                <div class="row">
                                    <button type="submit" id="btn-2" class="btn green">Kaydet</button>
                                    <a class="btn default" href="/Home/Index"> Vazgeç </a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>


