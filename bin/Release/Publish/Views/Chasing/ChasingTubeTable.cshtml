@{
    ViewBag.Title = "ChasingTubeTable";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
}

<div class="page-content" style="min-height:1112px">
    <div class="portlet-body form">
        <form class="form-horizontal" action="~/Definition/SaveUser" method="post">
            <div class="col-md-pull-10">
                <br />
                <p>   </p>

                <div class="portlet box green">
                    <div class="portlet-title">
                        <div class="caption">
                            <i class="fa fa-comments"></i>Tüp Dolumu Takip Listesi
                        </div>
                        @*<div class="tools">
                            <a href="javascript:;" class="collapse"> </a>
