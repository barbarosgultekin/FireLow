                        </div>*@
                    </div>
                    <div class="portlet-body">
                        <div class="table-scrollable">
                            <table class="table table-striped table-hover">
                                <thead>
                                    <tr>
                                        <th> Firma / Adı Soyadı </th>
                                        <th> Konum </th>
                                        <th> Tüp Sınıfı </th>
                                        <th> Tüp No </th>
                                        <th> Dolum Zamanlaması </th>
                                        <th> Dolum Tarihi </th>
                                        <th> Bir Sonraki Dolum Tarihi </th>
                                    </tr>
                                </thead>
                                <tbody>


                                    @foreach (var item in Model.Item2)

                                    {
                                    <tr>
                                        <td> @Html.DisplayFor(model => item.TCUSTOMER) </td>
                                        <td> @Html.DisplayFor(model => item.LOCATION) </td>


                                        @switch (Convert.ToInt32(item.FIRECLASS))
                                        {
                                            case 1:
                                                <td>A Sınıfı</td>
                                                break;
                                            case 2:
                                                <td>B Sınıfı</td>
                                                break;
                                            case 3:
                                                <td>C Sınıfı</td>
                                                break;
                                            case 4:
                                                <td>D Sınıfı</td>
                                                break;
                                            case 5:
                                                <td>E Sınıfı</td>
                                                break;
                                            case 6:
                                                <td>F Sınıfı</td>
                                                break;

                                            default:
                                                <td>Belirtilmemiş</td>
                                                break;
                                        }


                                        <td> @Html.DisplayFor(model => item.TSERIAL) </td>

                                        <td>

                                            @if (item.TSTATUS == 1)
                                            {
                                                <span class="label label-sm label-primary"> A-1 </span>
                                            }
                                            @if (item.TSTATUS == 2)
                                            {
                                                <span class="label label-sm label-primary"> H-1 </span>
                                            }
                                            @if (item.TSTATUS == 3)
                                            {
                                                <span class="label label-sm label-primary"> 6A-1 </span>
                                            }
                                            @if (item.TSTATUS == 4)
                                            {
                                                <span class="label label-sm label-primary"> Y-1 </span>
                                            }
                                        </td>

                                        <td> @Html.DisplayFor(model => item.FIRSTFILLING) </td>
                                        <td> @Html.DisplayFor(model => item.NEXTFILLING) </td>
                                    </tr>
                                    }


                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
