@model  Tuple<List<CUSTOMER>, List<TUBE>>

@{
    ViewBag.Title = "ChasingPeriodicTable";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
}

<div class="page-content" style="min-height:1112px">
    <div class="portlet-body form">
        <form class="form-horizontal" action="~/Definition/SaveUser" method="post">
            <div class="col-md-pull-12">
                <br />
                <p>   </p>

                <div class="portlet box blue">
                    <div class="portlet-title">
                        <div class="caption">
                            <i class="fa fa-comments"></i>Periyodik Bakım Takip Listesi
                        </div>
                        <div class="tools">
                            <a href="javascript:;" class="collapse"> </a>
                            <a href="#portlet-config" data-toggle="modal" class="config"> </a>
                            <a href="javascript:;" class="reload"> </a>
                        </div>
                    </div>
                    <div class="portlet-body">
                        <div class="table-scrollable">
                            <table class="table table-striped table-hover">
                                <thead>
                                    <tr>
                                        <th> Firma / Adı Soyadı</th>
                                        <th> Konum</th>
                                        
                                        <th> Periyodik Bakım Zamanlaması </th>
                                        <th> İlk Bakım </th>
                                        <th> Sıradaki Bakım </th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model.Item2)

                                    {
                                        <tr>
                                            <td class="highlight">
                                                <div class="success"></div>
                                                <a href="~/Chasing/ChasingPeriodicDetail?id=@Html.DisplayFor(model =>item.ID)">@Html.DisplayFor(model => item.TCUSTOMER)</a>
                                            </td>

                                            <td> @Html.DisplayFor(model => item.LOCATION) </td>
                                           
                                            <td>

                                                @if (item.TSTATUS == 1)
                                                {
                                                    <span class="label label-sm label-primary"> A-1 </span>
                                                }
                                                @if (item.TSTATUS == 2)
                                                {
                                                    <span class="label label-sm label-primary"> H-1 </span>
                                                }
                                                @if (item.TSTATUS == 3)
                                                {
                                                    <span class="label label-sm label-primary"> 6A-1 </span>
                                                }
                                                @if (item.TSTATUS == 4)
                                                {
                                                    <span class="label label-sm label-primary"> Y-1 </span>
                                                }

                                            </td>
                                            <td> @Html.Raw(item.FIRSTFILLING) </td>
                                            <td> @Html.DisplayFor(model => item.NEXTFILLING) </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>