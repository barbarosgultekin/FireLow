@model IEnumerable<FireLow.CUSTOMER>
@{
    ViewBag.Title = "CustomerEdit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="page-content" style="min-height:1200px">
    <div class="portlet-body form">
        <form class="form-horizontal" action="~/Customer/CustomerSave" method="post">
            <div class="form-body">

                <h3 class="form-section">@Html.Raw(ViewBag.APPELLATION) - Firma Bilgilerini Düzenle</h3>

                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label class="control-label col-md-3">Firma </label>
                            <div class="col-md-7">
                                <input type="text" id="APPELLATION" name="APPELLATION" class="form-control" value="@Html.Raw(ViewBag.APPELLATION)">
                                @*<span class="help-block"> This field has error. </span>*@
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group has-error">
                            <label class="control-label col-md-3">Yetkili Adı Soyadı *</label>
                            <div class="col-md-7">
                                <input type="text" id="CNAME" name="CNAME" class="form-control" value="@Html.Raw(ViewBag.CNAME)">
                                <input type="hidden" id="REFID" name="REFID" value="@Html.Raw(ViewBag.REFID)" class="form-control" />
                            </div>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label class="control-label col-md-3">Vergi / T.C Kimlik No</label>
                            <div class="col-md-7">
                                <input type="text" id="CTAXNO" name="CTAXNO" class="form-control" value="@Html.Raw(ViewBag.CTAXNO)" maxlength="10">
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label class="control-label col-md-3">Vergi Dairesi</label>
                            <div class="col-md-7">
                                <input type="text" id="CTAXOFFICE" name="CTAXOFFICE" class="form-control" value="@Html.Raw(ViewBag.CTAXOFFICE)">
                            </div>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group has-error">
                            <label class="control-label col-md-3">Telefon *</label>
                            <div class="col-md-7">
                                <input type="text" id="CGSM " name="CGSM" value="@Html.Raw(ViewBag.CGSM)" class="form-control" maxlength="10">
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label class="control-label col-md-3">E-Posta Adresi</label>
                            <div class="col-md-7">
                                <input type="text" id="CMAIL" name="CMAIL" class="form-control" value="@Html.Raw(ViewBag.CMAIL)">
                            </div>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label class="col-md-3 control-label">Durumu</label>
                            <div class="col-md-7">
                                <input type="checkbox" class="make-switch" id="CSTATUS" name="CSTATUS" value="OK" data-on-text="Aktif" data-off-text="Pasif" checked>

                            </div>
                        </div>
                    </div>
                </div>               

                <h3 class="form-section"> Adres Bilgileri</h3>

                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group has-error">
                            <label class="control-label col-md-3">Adres *</label>
                            <div class="col-md-7">
                                <input type="text" id="CADRESS" name="CADRESS" value="@Html.Raw(ViewBag.CADRESS)" class="form-control" placeholder="">
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label class="control-label col-md-3">Açıklama </label>
                            <div class="col-md-7">
                                <input type="text" id="CAREA" name="CAREA" value="@Html.Raw(ViewBag.CAREA)" class="form-control" placeholder="">
                            </div>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label class="control-label col-md-3">İl</label>
                            <div class="col-md-7">
                                <select id="il" name="CPROVINCE" class="form-control">
                                    <option value="@Html.Raw(ViewBag.CPROVINCE)">@Html.Raw(ViewBag.CPROVINCE)</option>
                                </select>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label class="control-label col-md-3">İlçe</label>
                            <div class="col-md-7">
                                <select id="ilce" name="CDISTRICT" class="bs-select form-control input">
                                    <option value="@Html.Raw(ViewBag.CDISTRICT)">@Html.Raw(ViewBag.CDISTRICT)</option>
                                </select>
                            </div>
                        </div>
                    </div>
                </div>

                <div style="padding-top:70px">
                    <div class="form-actions">
                        <div class="row">
                            <div class="col-md-3">
                                <div class="row">
                                    <button type="submit" id="btn-2" class="btn green">Değişiklikleri Kaydet</button>
                                    <a class="btn default" href="/Customer/CustomerTable"> Vazgeç </a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>


