
@{
    ViewBag.Title = "ChasingPeriodicList";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="page-content" style="min-height:1200px">
    <div class="portlet-body form">
        <form class="form-horizontal" action="" method="post">
            <div class="col-md-pull-12">
                <h3 class="form-section col-md-12">@Html.Raw(ViewBag.TCUSTOMER) - @Html.Raw(ViewBag.CID) - @Html.Raw(ViewBag.PTYPE) </h3>

                <div class="row">
                    <div class="col-md-4">
                        <div class="form-group">
                            <label class="col-md-5 control-label">Araç / Makine No</label>
                            <div class="col-md-7">
                                <div class="input-icon right">
                                    <input type="text" id="VNU" name="VNU" value="@Html.Raw(ViewBag.VNU)" class="form-control input-circle" placeholder="" readonly>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label class="col-md-5 control-label">Seri No</label>
                            <div class="col-md-6">
                                <div class="input-icon right">
                                    <input type="text" id="SNU" name="SNU" value="@Html.Raw(ViewBag.SNU)" class="form-control input-circle" placeholder="" readonly>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-4">
                        <div class="form-group">
                            <label class="col-md-5 control-label">Yapılan Eylemler</label>
                            <div class="col-md-7">
                                <div class="input-icon right">
                                    <input type="text" id="ACTION" name="ACTION" value="@Html.Raw(ViewBag.ACTION)" class="form-control input-circle" placeholder="" readonly>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label class="col-md-5 control-label">Bakım yeri</label>
                            <div class="col-md-6">
                                <div class="input-icon right">
                                    <input type="text" id="WPLACE" name="WPLACE" value="@Html.Raw(ViewBag.WPLACE)" class="form-control input-circle" placeholder="" readonly>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-4">
                        <div class="form-group">
                            <label class="col-md-5 control-label">Servis / Kontrol Tarihi</label>
                            <div class="col-md-7">
                                <div class="input-icon right">
                                    <input type="text" id="WDATE" name="WDATE" value="@Html.Raw(ViewBag.WDATE)" class="form-control input-circle" placeholder="" readonly>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label class="col-md-5 control-label">Açıklamalar</label>
                            <div class="col-md-6">
                                <div class="input-icon right">
                                    <input type="text" id="JDESC" name="JDESC" value="@Html.Raw(ViewBag.JDESC)" class="form-control input-circle" placeholder="" readonly>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>


            <h3 class="form-section col-md-12">Check List</h3>

            <div class="row">
                <div class="col-md-4">
                    <div class="form-group">
                        <label class="col-md-5 control-label">Basınç OK</label>
                        <div class="col-md-2">
                            <div class="input-icon right">
                                @if (ViewBag.PRESSURE == "OK")
                                {
                                    <input type="checkbox" class="form-control input-circle" checked>
                                }
                                else
                                {
                                    <input type="checkbox" class="form-control input-circle" disabled>
                                }

                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="form-group">
                        <label class="col-md-3 control-label">İşlevsellik</label>
                        <div class="col-md-2">
                            <div class="input-icon right">
                                @if (ViewBag.FUNCTIONALITY == "OK")
                                {
                                    <input type="checkbox" class="form-control input-circle" checked>
                                }
                                else
                                {
                                    <input type="checkbox" class="form-control input-circle" disabled>
                                }
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="form-group">
                        <label class="col-md-3 control-label">Hasar / Kaçak Kontrolü</label>
                        <div class="col-md-2">
                            <div class="input-icon right">
                                @if (ViewBag.DAMAGE == "OK")
                                {
                                    <input type="checkbox" class="form-control input-circle" checked>
                                }
                                else
                                {
                                    <input type="checkbox" class="form-control input-circle" disabled>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-4">
                    <div class="form-group">
                        <label class="col-md-5 control-label">Mühür / Etiket</label>
                        <div class="col-md-2">
                            <div class="input-icon right">
                                @if (ViewBag.SEAL == "OK")
                                {
                                    <input type="checkbox" class="form-control input-circle" checked>
                                }
                                else
                                {
                                    <input type="checkbox" class="form-control input-circle" disabled>
                                }
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="form-group">
                        <label class="col-md-3 control-label">Sıfırlama</label>
                        <div class="col-md-2">
                            <div class="input-icon right">
                                @if (ViewBag.RESET == "OK")
                                {
                                    <input type="checkbox" class="form-control input-circle" checked>
                                }
                                else
                                {
                                    <input type="checkbox" class="form-control input-circle" disabled>
                                }
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="form-group">
                        <label class="col-md-3 control-label">Sinyal</label>
                        <div class="col-md-2">
                            <div class="input-icon right">
                                @if (ViewBag.SIGNAL == "OK")
                                {
                                    <input type="checkbox" class="form-control input-circle" checked>
                                }
                                else
                                {
                                    <input type="checkbox" class="form-control input-circle" disabled>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-4">
                    <div class="form-group">
                        <label class="col-md-5 control-label">Selenoid Valf</label>
                        <div class="col-md-2">
                            <div class="input-icon right">
                                @if (ViewBag.SVALVE == "OK")
                                {
                                    <input type="checkbox" class="form-control input-circle" checked>
                                }
                                else
                                {
                                    <input type="checkbox" class="form-control input-circle" disabled>
                                }
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="form-group">
                        <label class="col-md-3 control-label">Elektrik / Mekanik Delgi</label>
                        <div class="col-md-2">
                            <div class="input-icon right">
                                @if (ViewBag.EPUNCH == "OK")
                                {
                                    <input type="checkbox" class="form-control input-circle" checked>
                                }
                                else
                                {
                                    <input type="checkbox" class="form-control input-circle" disabled>
                                }
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="form-group">
                        <label class="col-md-3 control-label">Koruma Kapağı</label>
                        <div class="col-md-2">
                            <div class="input-icon right">
                                @if (ViewBag.PROTECT == "OK")
                                {
                                    <input type="checkbox" class="form-control input-circle" checked>
                                }
                                else
                                {
                                    <input type="checkbox" class="form-control input-circle" disabled>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-4">
                    <div class="form-group">
                        <label class="col-md-5 control-label">Manometre Değişimi</label>
                        <div class="col-md-2">
                            <div class="input-icon right">
                                @if (ViewBag.MANOMETER == "OK")
                                {
                                    <input type="checkbox" value="OK" class="form-control input-circle" checked>
                                }
                                else
                                {
                                    <input type="checkbox" class="form-control input-circle" disabled>
                                }
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="form-group">
                        <label class="col-md-3 control-label">Membran değişimi</label>
                        <div class="col-md-2">
                            <div class="input-icon right">
                                @if (ViewBag.MEMBRANE == "OK")
                                {
                                    <input type="checkbox" class="form-control input-circle" checked>
                                }
                                else
                                {
                                    <input type="checkbox" class="form-control input-circle" disabled>
                                }
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="form-group">
                        <label class="col-md-3 control-label">İğne Değişimi</label>
                        <div class="col-md-2">
                            <div class="input-icon right">
                                @if (ViewBag.FNEEDLE == "OK")
                                {
                                    <input type="checkbox" class="form-control input-circle" checked>
                                }
                                else
                                {
                                    <input type="checkbox" class="form-control input-circle" disabled>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-4">
                    <div class="form-group">
                        <label class="col-md-5 control-label">Valf Kontrolü</label>
                        <div class="col-md-2">
                            <div class="input-icon right">
                                @if (ViewBag.VALVE == "OK")
                                {
                                    <input type="checkbox" class="form-control input-circle" checked>
                                }
                                else
                                {
                                    <input type="checkbox" class="form-control input-circle" disabled>
                                }
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="form-group">
                        <label class="col-md-3 control-label">Basınç Sensörü Kontrolü</label>
                        <div class="col-md-2">
                            <div class="input-icon right">
                                @if (ViewBag.PCONTROL == "OK")
                                {
                                    <input type="checkbox" class="form-control input-circle" checked>
                                }
                                else
                                {
                                    <input type="checkbox" class="form-control input-circle" disabled>
                                }
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="form-group">
                        <label class="col-md-3 control-label">Basınç Sensörü Değişimi</label>
                        <div class="col-md-2">
                            <div class="input-icon right">
                                @if (ViewBag.PCHANGE == "OK")
                                {
                                    <input type="checkbox" class="form-control input-circle" checked readonly>
                                }
                                else
                                {
                                    <input type="checkbox" class="form-control input-circle" disabled>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div style="padding-top:70px">
                <div class="form-actions">
                    <div class="row">
                        <div class="col-md-2">
                            <div class="row">
                                <a class="btn red" href="/Chasing/ChasingPeriodicTable"> Back </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>