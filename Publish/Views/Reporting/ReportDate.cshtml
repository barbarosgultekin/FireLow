
@{
    ViewBag.Title = "ReportDate";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="page-content" style="min-height:1200px">
    <div class="portlet-body form">
        <form class="form-horizontal" action="~/Reporting/Report" method="post">
            <div class="form-body">
                <div class="form-group">
                    <label class="control-label col-md-3">Değişim listesi</label>
                    <div class="col-md-4">
                        <select id="RTYPE" name="RTYPE" class="bs-select form-control input-circle" data-live-search="true">
                            <option value="MANOMETER">Manometre Değişim Raporu</option>
                            <option value="PCHANGE">Basınç Sensörü Değişim Raporu</option>
                            <option value="MEMBRANE">Membran Değişim Raporu</option>
                            <option value="FILL">Dolumlar Raporu</option>
                            <option value="CARE">Bakımlar Raporu</option>
                        </select>
                    </div>
                </div>
                <div class="form-group">
                    <label class="control-label col-md-4">Date Range</label>
                    <div class="col-md-8">
                        <div class="input-group input-medium date-picker input-daterange" data-date="10/11/2012" data-date-format="dd/mm/yyyy">
                            <input type="text" class="form-control" id="from" name="from">
                            <span class="input-group-addon"> to </span>
                            <input type="text" class="form-control" id="to" name="to">
                        </div>
                    </div>
                </div>
                <div style="padding-top:70px">
                    <div class="form-actions">
                        <div class="row">
                            <div class="col-md-3">
                                <div class="row">
                                    <button type="submit" id="btn-2" class="btn green">Kaydet</button>
                                    <a class="btn default" href="/Home/Index"> Vazgeç </a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>

