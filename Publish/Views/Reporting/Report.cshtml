                    </div>
                </div>*@

            <div class="row">
                <div class="col-xs-12">
                    <a class="btn btn-lg green-haze hidden-print uppercase print-btn" onclick="javascript:window.print();">Print</a>
                </div>
            </div>
        </div>
    </div>
</div>




