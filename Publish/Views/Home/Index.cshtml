<div class="page-content" style="min-height:1200px">

    <div class="portlet box red">
        <div class="portlet-title">
            <div class="caption">
                <i class="fa fa-arrow-circle-down"></i>Günlük Bakımlar - @Html.Raw(System.DateTime.Now.Date.DayOfWeek)
            </div>
            <div class="tools"> </div>
        </div>
        <div class="portlet-body">
            <table class="table table-striped table-bordered table-hover order-column" id="">
                <thead>
                    <tr>
                        <th>C_Nu</th>
                        <th>Firma</th>
                        <th>Konum</th>
                        <th>Ürün</th>
                        <th>Bakım Tarihi</th>
                    </tr>


                    @foreach (var xx in Model.Item3)
                    {
                        <tr>

                            <td>@Html.Raw(xx.ID)</td>

                            <td>@Html.Raw(xx.TCUSTOMER)</td>
                            <td>
                                <a href="@Html.Raw(xx.LOCATION)" target="_blank" class="btn btn-icon-only blue">
                                    <i class="fa fa-server"></i>
                                </a>
                            </td>
                            <td>@Html.Raw(xx.PTYPE)</td>
                            <td>@Html.Raw(xx.NEXTFILLING.ToString("dd-MM-yyyy"))</td>

                        </tr>
                    }
                </thead>
            </table>
        </div>
    </div>
    <div class="portlet box blue">
        <div class="portlet-title">
            <div class="caption">
                <i class="fa fa-globe"></i>Aylık Bakımlar -  @Html.Raw(System.DateTime.Now.ToShortDateString())
