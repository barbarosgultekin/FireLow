@model IEnumerable<FireLow.PRODUCT>
@{
    ViewBag.Title = "CustomerDetail";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="page-content" style="min-height:1200px">
    <div class="portlet-body form">
        <form class="form-horizontal" action="" method="post">
            <div class="form-body">

                <h3 class="form-section">@Html.Raw(ViewBag.APPELLATION)</h3>

                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label class="control-label col-md-3">Firma </label>
                            <div class="col-md-7">
                                <input type="text" id="APPELLATION" name="APPELLATION" class="form-control" value="@Html.Raw(ViewBag.APPELLATION)" disabled>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label class="control-label col-md-3">Yetkili Adı Soyadı</label>
                            <div class="col-md-7">
                                <input type="text" id="CNAME" name="CNAME" class="form-control" value="@Html.Raw(ViewBag.CNAME)" disabled>

                            </div>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label class="control-label col-md-3">Vergi / T.C Kimlik Numarası</label>
                            <div class="col-md-7">
                                <input type="text" id="CTAXNO" name="CTAXNO" class="form-control" value="@Html.Raw(ViewBag.CTAXNO)" disabled>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label class="control-label col-md-3">Vergi Dairesi</label>
                            <div class="col-md-7">
                                <input type="text" id="CTAXOFFICE" name="CTAXOFFICE" class="form-control" value="@Html.Raw(ViewBag.CTAXOFFICE)" disabled>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label class="control-label col-md-3">Telefon</label>
                            <div class="col-md-7">
                                <input type="text" id="CGSM " name="CGSM" class="form-control" value="@Html.Raw(ViewBag.CGSM)" disabled>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label class="control-label col-md-3">E-Posta Adresi</label>
                            <div class="col-md-7">
                                <input type="text" id="CMAIL" name="CMAIL" class="form-control" value="@Html.Raw(ViewBag.CMAIL)" disabled>
                            </div>
                        </div>
                    </div>
                </div>

                <h3 class="form-section">Adres Bilgileri</h3>

                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label class="control-label col-md-3">Adres</label>
                            <div class="col-md-7">
                                <input type="text" id="CADRESS" name="CADRESS" class="form-control" value="@Html.Raw(ViewBag.CADRESS)" disabled>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label class="control-label col-md-3">Açıklama </label>
                            <div class="col-md-7">
                                <input type="text" id="CAREA" name="CAREA" class="form-control" value="@Html.Raw(ViewBag.CAREA)" disabled>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label class="control-label col-md-3">İl</label>
                            <div class="col-md-7">
                                <input type="text" id="CPROVINCE" name="CPROVINCE" class="form-control" value="@Html.Raw(ViewBag.CPROVINCE)" disabled>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label class="control-label col-md-3">İlçe</label>
                            <div class="col-md-7">
                                <input type="text" id="CDISTRICT" name="CDISTRICT" class="form-control" value="@Html.Raw(ViewBag.CDISTRICT)" disabled>
                            </div>
                        </div>
                    </div>
                </div>

                <h3 class="form-section"></h3>


                <div class="portlet box blue">
                    <div class="portlet-title">
                        <div class="caption">
                            <i class="fa fa-globe"></i>Kayıtlı Olduğu Ürünler
                        </div>
                        <div class="tools"> </div>
                    </div>
                    <div class="portlet-body">
                        <div class="table-scrollable">
                            <table class="table table-striped table-bordered table-hover order-column" id="">
                                <thead>
                                    <tr>
                                        <th width="2">Durumu</th>
                                        <th>Cinsi</th>
                                        <th>Seri No</th>
                                        <th>Açıklama</th>
                                        <th>İçeriği</th>
                                        <th>Üretici</th>
                                    </tr>




                                    @foreach (var item in Model)
                                    {
                                        <tr>

                                            @if (item.TSTATUS == 0)
                                            {
                                                <td> <span class="label label-success">AKTİF</span></td>
                                            }
                                            else
                                            {
                                                <td> <span class="label label-danger">PASİF</span></td>
                                            }

                                            <td>
                                                @Html.DisplayFor(x => item.PTYPE)
                                            </td>

                                            <td>
                                                @Html.DisplayFor(x => item.SERIAL)
                                            </td>

                                            <td>
                                                @Html.DisplayFor(x => item.TAREA)
                                            </td>

                                            <td>
                                                @Html.DisplayFor(x => item.TCONTENT)
                                            </td>

                                            <td>
                                                @Html.DisplayFor(x => item.MANUFACTURER)
                                            </td>

                                        </tr>
                                    }

                                </thead>
                            </table>
                            <div class="table-scrollable">
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>