@model IEnumerable<FireLow.PRODUCT>
@{
    ViewBag.Title = "TubeTable";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="page-content" style="min-height:1200px">
    <div class="portlet-body form">
        <form class="form-horizontal" action="~//" method="post">


            <div class="portlet light bordered">

                <div class="portlet-title">

                    <div class="caption font-dark">
                        <i class="icon-settings font-dark"></i>
                        <span class="caption-subject bold uppercase">Ürün Listesi</span>
                    </div>
                    <p></p>
                </div>



                <div class="portlet-body">
                    <div class="table-responsive">
                        <table class="table table-striped table-bordered table-hover">
                            <thead>
                                <tr>
                                    <th width="5">ID </th>
                                    <th width="15"> Ürün Tipi </th>
                                    <th>Ürün Seri Numarası </th>
                                    <th>Ürün Sınıfı </th>
                                    <th>Durumu </th>
                                    @if (User.IsInRole("1"))
                                    {
                                        <th width="15" align="center">
                                            Düzenle
                                            @*<i class="fa fa-edit "></i>*@
                                        </th>
                                    }
                                    <th> İlk Dolum Tarihi </th>
                                    <th> Bakım Periyodu </th>
                                    <th> Hacim </th>
                                    <th> Detay Bilgisi </th>
                                    <th> Üretici </th>
                                    <th> İçeriği </th>
                                    <th> Bulunduğu Yer </th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {



                                <tr>
                                    <td align="center">@Html.DisplayFor(model => item.ID)</td>
                                    <td align="center">@Html.DisplayFor(model => item.PTYPE)</td>
                                    <td>@Html.DisplayFor(model => item.SERIAL)</td>

                                    @switch (Convert.ToInt32(item.PCLASS))
                                    {
                                        case 1:
                                            <td>İş Makineleri</td>
                                            break;
                                        case 2:
                                            <td>Tarım & Orman Makineleri</td>
                                            break;
                                        case 3:
                                            <td>Deniz Araçları</td>
                                            break;
                                        case 4:
                                            <td>Havalimanı Yer Aaraçları</td>
                                            break;
                                        case 5:
                                            <td>Kara Araçları</td>
                                            break;
                                        case 6:
                                            <td>Jeneratör</td>
                                            break;
                                        case 7:
                                            <td>Diğer</td>
                                            break;

                                        default:
                                            <td>Belirtilmemiş</td>
                                            break;
                                    }


                                    @*<td align="center">
            <a href="~/Tube/TubeSave?ID=@Html.DisplayFor(model =>item.ID)"><i class="btn btn-outline btn-circle btn-sm purple fa fa-remove"></i></a>
        </td>*@

                                    @if (item.TSTATUS == 1)
                                    {
                                        <td width="2" align="center" class="font-red-haze">Pasif</td>
                                    }
                                    else
                                    {
                                        <td width="2" align="center" class="font-green-haze">Aktif</td>
                                    }

                                    @if (User.IsInRole("1"))
                                    {
                                        <td align="center">
                                            <a href="~/Tube/TubeEdit?ID=@Html.DisplayFor(model => item.ID)"><i class="btn btn-outline btn-circle btn-sm purple fa fa-edit"></i></a>
                                        </td>

                                        @*<td align="center">
                <a href="~/Tube/Notification?ID=@Html.DisplayFor(model => item.ID)"><i class="btn btn-outline btn-circle btn-sm purple fa fa-edit"></i></a>
            </td>*@

                                    }

                                    @*<td>@Html.DisplayFor(model => item.FIRSTFILLING) </td>*@
                                    <td>  @Convert.ToDateTime(item.FIRSTFILLING).ToString("dd/MM/yyyy")</td>

                                    @switch (item.TPERIOD)
                                    {
                                        case 1:
                                            <td width="5%" align="center">Aylık A-1</td>
                                            break;
                                        @*case 2:
            <td width="5%" align="center">Haftalık H-1</td>
            break;*@
                                        case 3:
                                            <td width="5%" align="center">6 Aylık 6A-1</td>
                                            break;
                                        case 4:
                                            <td width="5%" align="center">Yıllık Y-1</td>
                                            break;
                                        case 5:
                                            <td width="5%" align="center">5 Yıllık 5-1</td>
                                            break;


                                        default:
                                            <td>Belirtilmemiş</td>
                                            break;
                                    }

                                    @*<td width="5%" align="center">@Html.DisplayFor(model => item.TSTATUS)</td>*@


                                    <td>@Html.DisplayFor(model => item.CAPACITY)</td>
                                    <td>@Html.DisplayFor(model => item.DETAIL)</td>
                                    <td>@Html.DisplayFor(model => item.MANUFACTURER)</td>
                                    <td>@Html.DisplayFor(model => item.TCONTENT)</td>
                                    <td>@Html.DisplayFor(model => item.TAREA)</td>

                                </tr>

                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>